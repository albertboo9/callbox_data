# Environnement
NODE_ENV=development

# Serveur
PORT=5000

# Base de données Firebase
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Authentification
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Sécurité
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Cache Redis (optionnel)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# Email (pour futures fonctionnalités)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Paiements (MTN MoMo, Orange Money)
MTN_API_KEY=your-mtn-api-key
MTN_API_SECRET=your-mtn-api-secret
ORANGE_API_KEY=your-orange-api-key
ORANGE_API_SECRET=your-orange-api-secret

# Stockage Cloud (AWS S3 ou Google Cloud Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-survey-bucket

# Monitoring (optionnel)
NEW_RELIC_LICENSE_KEY=your-new-relic-key
DATADOG_API_KEY=your-datadog-api-key